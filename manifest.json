{
    "name": "Azure DevOps Pipeline Tags",
    "description": "Display pipline run tags in pipeline list view",
    "author": "Zach LeBlanc",
    "version": "1.2.2",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": [
            "*://dev.azure.com/*",
            "*://visualstudio.com/*"
        ],
        "include_globs": [
            "https://dev.azure.com/*_build?definitionId=*"
        ],
        "js": [
            "include/jquery-3.6.4.slim.min.js",
            "scripts/main.js"
        ],
        "css": [
            "css/main.css"
        ]
    }],
    "permissions": [
        "cookies",
        "tabs",
        "webNavigation",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://dev.azure.com/*"
    ],
    "icons": {
        "16": "img/tag-16.png",
        "48": "img/tag-48.png"
    }
  }